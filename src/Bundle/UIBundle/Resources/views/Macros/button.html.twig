{% macro delete(url, message, size, disabled=false, confirm=false) %}
{% if disabled %}
<span class="btn btn-danger disabled">
  <i class="glyphicon glyphicon-trash"></i><span> {{ message is empty ? 'accard.delete'|trans : message }}</span>
</span>
{% else %}
<form action="{{ url }}" method="post" onSubmit="return isAccardReady ? isAccardReady() : false;">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger{% if confirm %} btn-confirm{% endif %}{% if size is defined %} btn-{{ size }}{% endif %}" type="submit">
    <i class="glyphicon glyphicon-trash"></i> <span> {{ message is empty ? 'accard.delete'|trans : message }}</span>
  </button>
</form>
{% endif %}
{% endmacro %}

{% macro delete_with_confirmation(url, message, size, disabled) %}
{% if disabled %}
<span class="btn btn-danger{% if size is defined %} btn-{{ size }}{% endif %} disabled">
    <i class="glyphicon glyphicon-trash"></i><span> {{ message is empty ? 'accard.delete'|trans : message }}</span>
</span>
{% else %}
<form action="{{ url }}" data-accard="formdelete" method="post" onSubmit="return isAccardReady ? isAccardReady() : false;">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger{% if size is defined %} btn-{{ size }}{% endif %}" type="submit">
    <i class="glyphicon glyphicon-trash"></i> <span> {{ message is empty ? 'accard.delete'|trans : message }}</span>
  </button>
</form>
{% endif %}
{% endmacro %}

