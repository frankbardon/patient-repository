{% macro show(url, message, size) %}
<a href="{{ url }}" class="btn btn-default{% if size is defined %} btn-{{ size }}{% endif %}">
  <i class="glyphicon glyphicon-book"></i><span> {{ message is empty ? 'accard.show'|trans : message }}</span>
</a>
{% endmacro %}

{% macro generic(url, message, icon, size) %}
<a href="{{ url }}" class="btn btn-default{% if size is defined %} btn-{{ size }}{% endif %}">
  {% if icon is not empty %}<i class="glyphicon glyphicon-{{ icon }}"></i>{% endif %}<span> {{ message }}</span>
</a>
{% endmacro %}

{% macro button(url, message, size) %}
