{% set add_phases = accard_setting('patient.collect_phases', false) %}

{% if add_phases %}
<div class="pull-right">
  <button id="add-phase" class="btn btn-success"><i class = 'glyphicon glyphicon-plus'></i>
    {{ 'accard.phase.action.add'|trans }}
  </button>
</div>
{% endif %}

<ul class="nav nav-tabs grid-tabs" role="tablist">
  <li class="active">
    <a href="#patient-base" role="tab" data-toggle="tab">{{ 'accard.interface.nav.patient.base'|trans }}</a>
  </li>
  <li>
    <a href="#patient-custom" role="tab" data-toggle="tab">{{ 'accard.interface.nav.patient.custom'|trans }}</a>
  </li>
  {% if add_phases %}
  <li>
    <a href="#patient-phases" role="tab" data-toggle="tab">{{ 'accard.interface.nav.patient.phases'|trans }}</a>
  </li>
  {% endif %}
</ul>
