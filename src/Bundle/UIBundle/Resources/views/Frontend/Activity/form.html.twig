{% from 'AccardUIBundle:Macros:form.html.twig' import prototype, static %}

<div class="row">
  <div class="col-md-6">
    {% if activity is defined and activity and activity.patient %}
      {{ static(activity.patient.fullName, 'accard.patient.entity_name'|trans) }}
    {% endif %}
    {{ form_row(form.diagnosis) }}
    {{ form_row(form.activityDate) }}
    {{ form.drug is defined ? form_row(form.drug) : '' }}
  </div>
  <div class="col-md-6">
  {% for field in form.fields %}
    {{ prototype(field) }}
  {% endfor %}
  </div>
</div>
