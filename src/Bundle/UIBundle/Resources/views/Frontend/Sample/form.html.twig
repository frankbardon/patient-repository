{% from 'AccardUIBundle:Macros:form.html.twig' import prototype, static %}

<div class="row">
  <div class="col-md-6">
    {% if attribute is defined and attribute and attribute.patient %}
      {{ static(attribute.patient.fullName, 'accard.patient.entity_name'|trans) }}
    {% endif %}
    {{ form_row(form.amount) }}
  </div>
  <div class="col-md-6">
  {% for field in form.fields %}
    {{ prototype(field) }}
  {% endfor %}
  </div>
</div>
