{% extends 'AccardWebBundle:Common/Form:create.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}
{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import generic %}
{% from 'AccardWebBundle:Common/Macros:alerts.html.twig' import no_javascript %}
{% from 'AccardWebBundle:Common/Macros:form.html.twig' import select_patient_js, select_patient_css %}

{% set prototype = form.vars.value.prototype is defined ? form.vars.value.prototype.name : 'default' %}


{% block form_page_title %}
    {{ page_title('accard.sample.action.create'|trans,
        [
            generic(path('accard_frontend_sample_index_by_prototype', {'prototype': prototype}), 'accard.sample.action.manage_all'|trans, 'user')
        ]
    ) }}
    {{ no_javascript() }}
{% endblock %}

{% block form_submit_action path('accard_frontend_sample_create', { prototype: prototype }) %}

{% block form_body %}
    {% include ["Theme:Frontend/Sample:#{prototype}-form.html.twig", "AccardWebBundle:Frontend/Sample:form.html.twig"] %}
{% endblock %}

{% block form_javascripts %}
	select_patient_js('#accard_sample_patient') 
	{% include "Theme:Frontend/Sample:#{prototype}-javascript.js.twig" ignore missing %}
{% endblock %}

{% block form_stylesheets %}
 	select_patient_css() 

 	{% include "Theme:Frontend/Sample:#{prototype}-style.css.twig" ignore missing %}
 {% endblock %}