{% from 'AccardWebBundle:Common/Macros:form.html.twig' import select_patient %}

{% macro prototype(field) %}
<div class="form-group">
    {{ form_widget(field) }}
</div>
{% endmacro %}

{% block sample_patient_form %}
<div class="row">
    <div class="col-md-12">
        {{ select_patient(form.patient) }}
    </div>
</div>
{% endblock %}

{% block sample_amount_form %}
<div class="col-md-12 well">
    <div class="row">
        <div class="col-md-6 row-split">
            {{ form_row(form.amount) }}
        </div>
        <div class="col-md-6">
            
        </div>
    </div>
</div>
{% endblock %}

{% block sample_additional_fields_form %}
{% for field in form.fields %}
<div class="row">
    <div class="col-md-6">
        {{ _self.prototype(field) }}
    </div>
</div>
{% endfor %}
{% endblock %}

