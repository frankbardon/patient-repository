{% extends 'AccardWebBundle:Frontend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:actions.html.twig' import create %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}

{% block content %}
    {{ page_title('accard.behavior.action.create'|trans)}}
    
    {{ form_errors(form)}}

    <form action={% block behavior_form_action %}{% endblock %} method="post" {{ form_enctype(form) }}>
        {{ form_widget(form._token) }}

        {% block behavior_form %}{% endblock %}

        <div class="row">
            <div class="col-md-12">
                <span class="pull-right">{{ create() }}</span>
            </div>
        </div>
    </form> 

{% endblock %}