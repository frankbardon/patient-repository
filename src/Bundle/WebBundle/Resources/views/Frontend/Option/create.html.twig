<div class="form-content"> 
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title">{{ option.presentation }}</h2>
    </div>
    <div class="modal-body">
        <form name="option-quickadd" class="form-horizontal" action="{{ path('accard_frontend_option_quickadd', { option: option.id }) }}" method="post">
            <table class="table table-striped">
                </thead>
                    <tr>
                        <th>#</th>
                        <th>Value</th>
                    </tr>
                </thead>
                </tbody>
                    {% for value in option.values %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ value }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ form_widget(form._token) }}
            {{ form_row(form.newValue.value) }}
            {{ form_row(form.newValue.locked) }}
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
