{% extends 'AccardWebBundle:Frontend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:alerts.html.twig' import disabled %}
{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import create, design %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import pagination, page_title %}
{% from 'AccardWebBundle:Frontend/Diagnosis:macros.html.twig' import list %}

{% set settings = accard_settings('diagnosis') %}
{% set designBtn = null %}
{% if is_granted('ROLE_ADMIN') %}
    {% set designBtn = design(path('accard_backend_diagnosis_design'), 'accard.diagnosis.action.design'|trans) %}
{% endif %}

{% block content %}

   {{ page_title(
        'accard.diagnosis.action.index'|trans,
        [
            create(path('accard_frontend_diagnosis_create'), 'accard.diagnosis.action.create'|trans),
            designBtn
        ]
    )}}

    {% if not settings.enabled %}
        {{ disabled('accard.diagnosis.entity_name'|trans) }}
    {% endif %}

     {{ list(diagnoses) }}
     {{ pagination(diagnoses) }}    
{% endblock %}

{% block page_javascripts %}
<script type="text/javascript" defer>
    var Tabler = Accard.get('table');
    var diagnoses = new Tabler('#diagnoses');

    diagnoses
        .plugin('autohighlighting', {
            id: 'diagnosis-{{ app.request.query.get('id', 0) }}',
            className: 'info'
        })
        .bindAll()
    ;
</script>
{% endblock %}