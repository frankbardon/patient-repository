{% extends 'AccardWebBundle:Frontend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import design %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import pagination, page_title %}
{% from 'AccardWebBundle:Frontend/Attribute:macros.html.twig' import list %}

{% set settings = accard_settings('attribute') %}
{% set designBtn = null %}

{% if is_granted('ROLE_ADMIN') %}
    {% set designBtn = design(path('accard_backend_attribute_design'), 'accard.attribute.action.design'|trans) %}
{% endif %}

{% block content %}
    {% block attribute_title %}
        {{ page_title('accard.attribute.title.index'|trans, designBtn) }}
    {% endblock %}

    {% block attribute_tabs %}
        {{ render(controller('AccardWebBundle:Frontend:prototypeChoiceForm', { 'type' : 'attribute' })) }}
    {% endblock %}

    {% block attribute_content %}
        {{ list(attributes) }}
        {{ pagination(attributes) }}
    {% endblock %}
{% endblock %}

{% block page_javascripts %}
<script type="text/javascript" defer>
    var Tabler = Accard.get('table');
    var attributes = new Tabler('#attributes');

    attributes
        .plugin('autohighlighting', {
            id: 'attribute-{{ app.request.query.get('id', 0) }}',
            className: 'info'
        })
        .bindAll()
    ;
</script>
{% endblock %}