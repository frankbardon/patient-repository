{% extends 'AccardWebBundle:Frontend/Attribute:index.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import create %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}

{% set prototype = app.request.get('prototype') %}
{% set createBtn = prototype ? create(path('accard_frontend_attribute_create', { prototype: prototype }), 'accard.attribute.action.create'|trans) : null %}

{% block attribute_title %}
    {{ page_title(
        'accard.attribute.title.index_by_prototype'|trans({'%prototype%': prototype|humanize}),
        [
            createBtn,
            designBtn
        ]
    ) }}
{% endblock %}
