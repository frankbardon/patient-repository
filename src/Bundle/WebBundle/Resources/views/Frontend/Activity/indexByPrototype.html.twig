{% extends 'AccardWebBundle:Frontend/Activity:index.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import create %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}

{% set prototype = app.request.get('prototype') %}
{% set createBtn = prototype ? create(path('accard_frontend_activity_create', { prototype: prototype }), 'accard.activity.action.create'|trans) : null %}

{% block activity_title %}
    {{ page_title(
        'accard.activity.title.index_by_prototype'|trans({'%prototype%': prototype|humanize}),
        [
            createBtn,
            designBtn
        ]
    ) }}
{% endblock %}

{% block activity_tabs %}
    {% include 'AccardWebBundle:Frontend/Activity:tabs.html.twig' %}
{% endblock %}
