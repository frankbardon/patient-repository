{% extends 'AccardWebBundle:Frontend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import design %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import pagination, page_title %}
{% from 'AccardWebBundle:Frontend/Activity:macros.html.twig' import list %}

{% set settings = accard_settings('activity') %}
{% set designBtn = null %}

{% if is_granted('ROLE_ADMIN') %}
    {% set designBtn = design(path('accard_backend_activity_design'), 'accard.activity.action.design'|trans) %}
{% endif %}

{% block content %}
    {% block activity_title %}
        {{ page_title('accard.activity.title.index'|trans, designBtn) }}
    {% endblock %}

    {% block activity_tabs %}
        {% include 'AccardWebBundle:Frontend/Activity:tabs.html.twig' %}
    {% endblock %}

    {% block activity_content %}
        {{ list(activities) }}
        {{ pagination(activities) }}
    {% endblock %}
{% endblock %}

{% block page_javascripts %}
<script type="text/javascript" defer>
    var Tabler = Accard.get('table');
    var activities = new Tabler('#activities');

    activities
        .plugin('autohighlighting', {
            id: 'activity-{{ app.request.query.get('id', 0) }}',
            className: 'info'
        })
        .bindAll()
    ;
</script>
{% endblock %}