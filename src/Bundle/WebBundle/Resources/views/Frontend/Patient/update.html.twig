{% extends 'AccardWebBundle:Frontend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:actions.html.twig' import update %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}

{% block content %}
    {{ page_title('accard.interface.frontend.titles.update_patient'|trans({ '%patient%': patient.firstName })) }}

    {{ form_errors(form) }}
    
    <form action="{{ path('accard_frontend_patient_update', { id: patient.id }) }}" method="post" {{ form_enctype(form) }}>
        <input type="hidden" name="_method" value="PUT">
        {{ form_widget(form._token) }}
        {% include 'AccardWebBundle:Frontend/Patient:form.html.twig' %}
        <div class="row">
            <div class="col-md-12">
                <span class="pull-right">{{ update() }}</span>
            </div>
        </div>
    </form>
{% endblock %}
