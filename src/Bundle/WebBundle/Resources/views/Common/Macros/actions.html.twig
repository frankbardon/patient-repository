{% macro create(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-lg"><i class="icon-ok"></i> {{ 'accard.create'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="icon-remove"></i> {{ 'accard.cancel'|trans }}</a>
</div>
{% endmacro %}

{% macro update(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-lg"><i class="icon-save"></i> {{ 'accard.save_changes'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="icon-remove"></i> {{ 'accard.cancel'|trans }}</a>
</div>
{% endmacro %}
