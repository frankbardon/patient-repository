{% macro success(text, heading=true) %}
<div class="alert alert-success">
    {% if heading -%}
        <h4 class="alert-heading">{{ 'accard.alert.success'|trans }}</h4>
    {% endif %}
    {{ text }}
</div>
{% endmacro %}

