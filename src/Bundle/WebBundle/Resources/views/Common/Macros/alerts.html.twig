{% macro construction(area) %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import icon %}
<div class="alert alert-warning alert-construction">
    {{ icon('fa fa-5x fa-warning') }}
    <h4 class="alert-heading">{{ 'accard.alert.construction'|trans }}</h4>
    <p>{{ 'accard.alert.construction_area'|trans({ '%area%': area }) }}</p>
    <div class="clearfix"></div>
</div>
{% endmacro %}

{% macro disabled(area) %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import icon %}
<div class="alert alert-warning">
    {{ 'accard.alert.disabled_area'|trans({'%area%': area}) }}
</div>
{% endmacro %}

{% macro no_javascript(text, heading=true) %}
<noscript class="noscript">
    <div class="alert alert-warning noscript">
        {% if heading -%}
            <h4 class="alert-heading">{{ 'accard.alert.warning'|trans }}</h4>
        {% endif %}
        {{ text|default('accard.alert.no_javascript'|trans) }}
    </div>
</noscript>
{% endmacro %}