{% extends 'AccardWebBundle:Backend:layout.html.twig' %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}
{% from 'AccardWebBundle:Common/Macros:actions.html.twig' import update %}

{% block content %}
    {% block page_title %}
        {{ page_title('accard.diagnosis_code_group.action.update'|trans) }}
    {% endblock %}

    {% block diagnosis_code_group_form %}
        {{ form_errors(form) }}

        <form action="{{ path('accard_backend_diagnosis_code_group_update', { id: diagnosis_code_group.id }) }}" method="post" {{ form_enctype(form) }}>
            {% include 'AccardWebBundle:Backend/Diagnosis:groupForm.html.twig' %}
            <div class="row">
                <div class="col-md-12">
                    <span class="pull-right">{{ update() }}</span>
                </div>
            </div>
        </form>
    {% endblock %}
{% endblock %}