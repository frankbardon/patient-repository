{% extends 'AccardWebBundle:Backend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}
{% from 'AccardWebBundle:Common/Macros:actions.html.twig' import update %}

{% block content %}
    {% block page_title %}
        {{ page_title('accard.interface.backend.titles.general_settings'|trans) }}
    {% endblock %}

    {% block settings_form %}
    {{ form_errors(form) }}

    <form action="{{ path('accard_backend_general_settings') }}" method="post" {{ form_enctype(form) }}>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.title) }}
                {{ form_row(form.logotype) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.locale) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="pull-right">{{ update() }}</span>
            </div>
        </div>
    {{ form_end(form) }}
    {% endblock %}
{% endblock %}