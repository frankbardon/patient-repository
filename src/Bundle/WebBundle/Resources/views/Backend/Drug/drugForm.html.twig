{% block drug_form %}
{{ form_widget(form._token) }}
<div class="row">
    <div class="col-md-6">
        {% if form.vars.value.id is null %}
            {{ form_row(form.presentation, { widget_addon_append: { icon: 'remove'}}) }}
        {% else %}
            {{ form_row(form.presentation) }}
        {% endif %}
        {{ form_row(form.name) }}
        {{ form_row(form.generic) }}
    </div>
    <div class="col-md-6">
        {% if form.groups is defined %}
            {{ form_row(form.groups) }}
        {% endif %}
    </div>
</div>
{% endblock %}