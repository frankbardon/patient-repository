{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import page_title %}

{% extends 'AccardWebBundle:Backend:layout.html.twig' %}

{% block content %}

    {{ page_title( name ) }}

    <table class="table table-striped">
        <thead>
            <th>Version #</th>
            <th>Updated at</th>
            <th>Edited by</th>
            <th>{# Placeholder for options #}</th>
        </thead>
        <tbody>
            {% for log in history %}
                <tr>
                    <td>
                        {{ log.version }}
                    </td>
                    <td>
                        {{ log.loggedAt|date('m/d/Y h:i') }}
                    </td>
                    <td>
                        {{ log.username }}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('accard_backend_template_design', { 'name' : name, 'version' : log.version }) }}">
                            Design
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}