<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass repository-class="Accard\Bundle\DrugBundle\Doctrine\ORM\DrugRepository" name="Accard\Component\Drug\Model\Drug" table="accard_drug">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" unique="true" nullable="false"/>
    <field name="presentation" type="string" column="presentation" nullable="false"/>
    <one-to-many field="brands" target-entity="Accard\Component\Drug\Model\Drug" mapped-by="generic"/>
    <many-to-one field="generic" target-entity="Accard\Component\Drug\Model\Drug" inversed-by="brands">
      <join-columns>
        <join-column name="genericId" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="groups" target-entity="Accard\Component\Drug\Model\DrugGroup" mapped-by="drugs"/>
  </mapped-superclass>
</doctrine-mapping>
